doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Make an Order
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="css/tables.css")
     
  body
    nav.navbar.navbar-expand-lg.navbar-custom
      .container-fluid
        a.navbar-brand(href='/') MAYONDO WOOD AND FURNITURE
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home  |
            li.nav-item
              a.nav-link(href='/gallery') Gallery |
            li.nav-item
              a.nav-link(href='/#contactus') Get In Touch  |
    .container
      .order-card
        h2.text-center Make an Order

        form(action="/order" method="POST")
          .mb-3
            label.form-label(for="productName") Product Name
            input.form-control(type="text" name="productName" placeholder="e.g. Office Table" required)

          .mb-3
            label.form-label(for="quantity") Quantity
            input.form-control(type="number" name="quantity" min="1" required)

          .mb-3
            label.form-label(for="customerName") Your Name
            input.form-control(type="text" name="customerName" required)

          .mb-3
            label.form-label(for="phone") Phone Number
            input.form-control(type="text" name="phone" required)

          .mb-3
            label.form-label(for="notes") Additional Notes (Optional)
            textarea.form-control(name="notes" rows="3")

          button.btn.btn-secondary.w-100.btn-lg(type="submit") Submit Order
