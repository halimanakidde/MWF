doctype html
html
  head
    title Contact Messages
    style.
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
      }
      th {
        background: #f3f3f3;
      }
      .unread {
        background: #fff7cc;
      }
      .actions form {
        display: inline;
      }
      button {
        padding: 5px 10px;
        cursor: pointer;
      }

  body
    h2 Contact Messages

    if messages.length
      table
        thead
          tr
            th Status
            th Full Name
            th Email
            th Message
            th Date
            th Actions
        tbody
          each msg in messages
            tr(class= msg.read ? "" : "unread")
              td= msg.read ? "Read" : "Unread"
              td= msg.fullName
              td= msg.email
              td= msg.message
              td= msg.dateSent.toLocaleString()
              td.actions
                if !msg.read
                  form(action=`/manager/messages/${msg._id}/mark-read` method="POST")
                    button(type="submit") Mark as Read

                form(action=`/manager/messages/${msg._id}/delete` method="POST")
                  button(type="submit" onclick="return confirm('Delete this message?')") Delete

    else
      p No messages yet.
