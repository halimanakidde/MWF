doctype html
html
  head
    title Sales Summary
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
  body
    .container.mt-4
      h1.mb-4 Sales Summary by Agent

      table.table.table-bordered.table-striped
        thead
          tr
            th Agent
            th Total Revenue (UGX)
            th Total Units Sold
            th Total Sales
        tbody
          each agent, data in summary
            tr
              td= agent
              td #{new Intl.NumberFormat().format(summary[agent].revenue)}
              td= summary[agent].units
              td= summary[agent].salesCount
