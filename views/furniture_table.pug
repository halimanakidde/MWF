doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title My Database Info
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
    link(rel="stylesheet", href="/css/tables.css")

  body
    //- Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-custom
      .container-fluid
        a.navbar-brand(href='/') MAYONDO INVENTORY MANAGEMENT SYSTEM
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home  |
            li.nav-item
              a.nav-link(href='/woodRegistered') View Wood Stock  |
            li.nav-item
              a.nav-link(href='/furnitureRegistered') View Furniture Stock  |
            li.nav-item
              a.nav-link(href='/recordfurnitureSale') Add Furniture Sale |
            li.nav-item
              a.nav-link(href='/recordwoodSale') Add Wood Sale  |
            li.nav-item
              a.nav-link(href='/userRegister') User Register  |
            li.nav-item
              a.nav-link(href='/logout')
                button.login-btn Logout

    //- Main Content
    .container.mt-5
      h2.text-center.mb-4.text-primary List of Furniture Available

      if Furniture.length > 0
        table.table.table-striped.table-hover.table-bordered.align-middle
          thead.table-dark
            tr
              th Furniture Name
              th Image
              th Category
              th Wood Type
              th Quantity
              th Unit Price
              th Date Produced
              th Update
              th Delete
          tbody
            each item in Furniture
              tr
                td= item.furniturename
                td
                  img(src='/' + item.furnitureimage alt='furniture image' width='120' height='120' class='rounded')
                td= item.category
                td= item.material
                td= item.quantity
                td= item.unitprice
                td= item.date
                td
                  a.btn.btn-primary.btn-sm(href=`/furniture/${item._id}`) Update
                td
                  form(action=`/deletefurniture/${item._id}` method='post')
                    input(type='hidden' name='id' value=item._id)
                    button.btn.btn-danger.btn-sm(type='submit') Delete
      else
        .alert.alert-warning.text-center.mt-4 No furniture found

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-6MRq6JrPL9e8QxeO1LCkIf2Fq1aN9zK3XhX+9A6sGVD4gzvdwA0Odfp2XBoET4eC" crossorigin="anonymous")
