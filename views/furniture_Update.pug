doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Update Furniture
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' integrity='sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB' crossorigin='anonymous')
    link(rel="stylesheet", href="/css/tables.css")
  body
    //- Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-custom
      .container-fluid
        a.navbar-brand(href='/') MAYONDO INVENTORY MANAGEMENT SYSTEM
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home |
            li.nav-item
              a.nav-link(href='/woodRegistered') View Wood Stock |
            li.nav-item
              a.nav-link(href='/furnitureRegistered') View Furniture Stock |
            li.nav-item
              a.nav-link(href='/recordfurnitureSale') Add Furniture Sale |
            li.nav-item
              a.nav-link(href='/recordwoodSale') Add Wood Sale |
            li.nav-item
              a.nav-link(href='/logout')
                button.login-btn Logout

    //- Main Content
    .container.mt-5
      .text-center.mb-4
        h1.text-primary Update Furniture
      
      form#updateForm(action=`/furniture/${item._id}` method='post' class='p-4 border rounded shadow-sm bg-light')
        h4.mb-4.text-center Furniture Stock Registration

        .row.mb-3
          .col-md-6
            label.form-label(for='itemName') Furniture Name
            input#itemName.form-control(type='text' name='furnitureType' value=item.furnitureType placeholder='e.g., Office Desk')
          .col-md-6
            label.form-label(for='category') Furniture Category
            select#category.form-select(name='category')
              option(value='Office' selected=item.category==='Office') Office Furniture
              option(value='Home' selected=item.category==='Home') Home Furniture
              option(value='Outdoor' selected=item.category==='Outdoor') Outdoor Furniture
              option(value='Custom' selected=item.category==='Custom') Custom Orders

        .row.mb-3
          .col-md-6
            label.form-label(for='material') Wood Type / Material
            select#material.form-select(name='material')
              option(value='Mahogany' selected=item.material==='Mahogany') Mahogany
              option(value='Muvule' selected=item.material==='Muvule') Muvule
              option(value='Teak' selected=item.material==='Teak') Teak
              option(value='Pine' selected=item.material==='Pine') Pine

          .col-md-3
            label.form-label(for='quantity') Quantity
            input#quantity.form-control(type='number' name='quantity' value=item.quantity min='1')
          
          .col-md-3
            label.form-label(for='price') Unit Price (UGX)
            input#price.form-control(type='number' name='unitprice' value=item.unitprice min='1')

        .text-center.mt-4
          button.btn.btn-danger.btn-lg(type='submit') Update Furniture
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js' integrity='sha384-6MRq6JrPL9e8QxeO1LCkIf2Fq1aN9zK3XhX+9A6sGVD4gzvdwA0Odfp2XBoET4eC' crossorigin='anonymous')
