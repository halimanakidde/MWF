doctype html
html
  head
    title Sales Executives
    link(rel="stylesheet" href="/css/tables.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")

  body
    nav.navbar.navbar-expand-lg.navbar-custom
      .container-fluid
        a.navbar-brand(href='/') MAYONDO INVENTORY MANAGEMENT SYSTEM
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home |
            li.nav-item
              a.nav-link(href='/woodRegistered') View Wood Stock |
            li.nav-item
              a.nav-link(href='/furnitureRegistered') View Furniture Stock |
            li.nav-item
              a.nav-link(href='/recordfurnitureSale') Add Furniture Sale |
            li.nav-item
              a.nav-link(href='/recordwoodSale') Add Wood Sale |
            li.nav-item
              a.btn.btn-danger(href='/viewboard') Dashboard  |
            li.nav-item
              a.btn.btn-danger(href='/logout') Logout

    .container-fluid.mt-5
      h2.text-center.mb-4.text-primary Sales Executives

      if salesExecutives && salesExecutives.length
        table.table.table-striped.table-hover.table-bordered.align-middle
          thead.table-dark
            tr
              th #
              th Full Name
              th Email
              th Role
          tbody
            each person, i in salesExecutives
              tr
                td #{i + 1}
                td #{person.fullname}
                td #{person.email}
                td #{person.role}
      else
        p.text-danger.text-center No sales executives registered yet.
