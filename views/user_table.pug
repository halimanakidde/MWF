doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title My Database Info
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' integrity='sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/tables.css')
    style.
      .navbar-custom {
        background-color: #86087cd5; /* Purple */
      }
      .navbar-custom .nav-link,
      .navbar-custom .navbar-brand {
        color: white;
      }
      .navbar-custom .nav-link:hover {
        color: #d1b3ff;
      }

  body
    //- Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-custom
      .container-fluid
        a.navbar-brand(href='/') MAYONDO INVENTORY MANAGEMENT SYSTEM
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/woodRegistered') View Wood Stock
            li.nav-item
              a.nav-link(href='/furnitureRegistered') View Furniture Stock
            li.nav-item
              a.nav-link(href='/recordfurnitureSale') Add Furniture Sale
            li.nav-item
              a.nav-link(href='/recordwoodSale') Add Wood Sale
            li.nav-item
              a.nav-link(href='/userRegister') User Register
            li.nav-item
              a.nav-link(href='/logout') Logout

    //- Page Content
    .container.mt-5
      h2.text-center.mb-4.text-primary Registered Users

      if users.length > 0
        table.table.table-striped.table-bordered
          thead.table-dark
            tr
              th Full Name
              th Email
              th Role
          tbody
            each user in users
              tr
                td #{user.fullname}
                td #{user.email}
                td #{user.role}
      else
        p.text-center.text-muted No users found.

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js' integrity='sha384-6MRq6JrPL9e8QxeO1LCkIf2Fq1aN9zK3XhX+9A6sGVD4gzvdwA0Odfp2XBoET4eC' crossorigin='anonymous')
