doctype html
html
  head
    title Sales Report
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel="stylesheet", href="css/tables.css")
    
  body.container.mt-4

    h2.text-center.mb-4.text-primary  Sales Report

  .row.mb-4
      .col-md-6
        .report-card.h-100.revenue-box
          h4 Total Revenue
          p #{new Intl.NumberFormat().format(totalRevenue)} UGX

      .col-md-6
        .report-card.h-100.sales-box
          h4 Total Sales
          p #{new Intl.NumberFormat().format(totalSales)}

  table.table.table-striped.table-hover.table-bordered.align-middle
      thead.table-dark
        tr
          th Customer
          th Product
          th Qty
          th Unit Price
          th Total
        

      tbody
        each sale in sales
          tr
            td= sale.customerName
            td= sale.productName
            td= sale.quantity
            td #{new Intl.NumberFormat().format(sale.unitprice)}
            td #{new Intl.NumberFormat().format(sale.totalprice)}
          
