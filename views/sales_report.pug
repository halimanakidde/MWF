doctype html
html
  head
    title Sales Report
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
    link(rel="stylesheet", href="/css/tables.css")
    
  body
     //- Navigation Bar
  nav.navbar.navbar-expand-lg.navbar-custom
    .container-fluid
      a.navbar-brand(href='/') MAYONDO INVENTORY MANAGEMENT SYSTEM
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href='/') Home  |
          li.nav-item
            a.nav-link(href='/woodRegistered') Wood Stock  |
          li.nav-item
            a.nav-link(href='/furnitureRegistered') Furniture Stock  |
          li.nav-item
            a.nav-link(href='/recordfurnitureSale') Furniture Sale |
          li.nav-item
            a.nav-link(href='/recordwoodSale') Add Wood Sale  |
          li.nav-item
            a.btn.btn-danger(href="/download/sales-pdf") Download PDF Report  |
          li.nav-item
            a.btn.btn-danger(href='/logout') Logout

  h2.text-center.mb-4.text-primary  Sales Report

  .row.mb-4
      .col-md-6
        .report-card.h-100.revenue-box
          h4 Total Revenue
          p #{new Intl.NumberFormat().format(totalRevenue)} UGX

      .col-md-6
        .report-card.h-100.sales-box
          h4 Total Sales
          p #{new Intl.NumberFormat().format(totalSales)}

  table.table.table-striped.table-hover.table-bordered.align-middle
      thead.table-dark
        tr
          th Customer
          th Product
          th Qty
          th Unit Price
          th Total
          th Sales Agent
        

      tbody
        each sale in sales
          tr
            td= sale.customerName
            td= sale.productName
            td= sale.quantity
            td #{new Intl.NumberFormat().format(sale.unitprice)}
            td #{new Intl.NumberFormat().format(sale.totalprice)}
            td= sale.salesAgent
          
